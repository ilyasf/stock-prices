{
  "name": "electron-typescript-app",
  "version": "1.0.0",
  "description": "Electron application with TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:rust && node copy-files.js",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:rust": "cd src-rust && wasm-pack build --target web",
    "watch": "tsc -w",
    "electron:build": "electron-builder",
    "dev": "npm run build && npm run start",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "build": {
    "appId": "com.electron.app",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "wasm-pack": "^0.10.0"
  }
} 